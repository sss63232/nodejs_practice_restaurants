<!-- search bar -->
<div class="container search-bar">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/search">
                <h4 class="mb-2">Find a restaurant:</h4>
                <div class="input-group">
                    <input type="text" name="keyword" class="form-control" placeholder="keywords"
                        aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
                    <div class="input-group-append">
                        <button class="btn btn-major" type="submit" id="search-button">
                            search
                        </button>
                    </div>
                </div>
            </form>
            <br />
            <h4 class="mb-2">Creat a new restaurant:</h4>
            <div class="btn-create">
                <a href="/restaurants/create" class="btn btn-primary">Create</a>
            </div>
        </div>
    </div>
</div>

<!-- restaurants -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="card-columns">

                {{#each restaurants}}
                <a href="/restaurants/{{this.id}}" class="text-secondary">
                    <div class="card mb-3">
                        <img class="card-img-top" src={{this.image}} alt="image of the restaurant">
                        <div class="card-body p-3">
                            <h6 class="card-title mb-1">{{this.name}}</h6>

                            <div class="restaurant-category mb-1">
                                <i class="fas fa-utensils pr-2"></i> {{this.category}}
                            </div>

                            <span class="badge badge-pill badge-danger font-weight-normal">
                                {{this.rating}}
                                <i class="fas fa-star fa-xs"></i>
                            </span>
                            <div class="action mt-2 mb-5 text-right">
                                <a href="/restaurants/edit/{{this.id}}" class="btn btn-primary">edit</a>
                                <form action="/restaurants/delete/{{this.id}}" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger">delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </a>
                {{/each}}

            </div>
        </div>
    </div>
</div>